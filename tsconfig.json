{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  // "ts-node": {
  //   "esm": true,
  //   "files": true,
  //   "compilerOptions": {}
  // },
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES6",

    "rootDir": "./src",
    "outDir": "./dist",

    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "typeRoots": ["./types", "./node_modules/@types"]
  }
}
