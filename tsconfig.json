{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": false,
    "module": "NodeNext",
    "target": "ES6",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "types": ["bun-types", "jest"]
  },
  "include": ["src/**/*"]
}
